{
    "rules": {
        "events": {
            ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
            "$eventId": {
                ".write": "auth != null && root.child('admins').child(auth.uid).exists() && !data.exists()",
                ".validate": "newData.hasChildren(['type', 'payload', 'timestamp'])"
            }
        },
        "services": {
            ".read": true,
            ".write": false
        },
        "status": {
            ".read": true,
            ".write": false
        },
        "history": {
            ".read": true,
            ".write": false
        },
        "admins": {
            ".read": false,
            ".write": false
        }
    }
}